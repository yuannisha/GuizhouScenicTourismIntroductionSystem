.review-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}
.review-popup .mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}
.review-popup .content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
}
.review-popup .content .header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.review-popup .content .header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.review-popup .content .header .close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}
.review-popup .content .form .score-section {
  margin-bottom: 20rpx;
}
.review-popup .content .form .score-section .label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}
.review-popup .content .form .score-section .score-input {
  display: flex;
  align-items: center;
}
.review-popup .content .form .score-section .score-input slider {
  flex: 1;
  margin-right: 20rpx;
}
.review-popup .content .form .score-section .score-input .score-text {
  font-size: 32rpx;
  color: #ff4d4f;
  width: 80rpx;
  text-align: right;
}
.review-popup .content .form textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.review-popup .content .form .image-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}
.review-popup .content .form .image-list image {
  width: calc(33.33% - 20rpx);
  height: 200rpx;
  margin: 10rpx;
  border-radius: 8rpx;
}
.review-popup .content .form .upload-btn {
  width: calc(33.33% - 20rpx);
  height: 200rpx;
  margin: 10rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.review-popup .content .form .upload-btn .icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 10rpx;
}
.review-popup .content .form .upload-btn .text {
  font-size: 24rpx;
  color: #999;
}
.review-popup .content .footer {
  margin-top: 30rpx;
}
.review-popup .content .footer .submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #007AFF;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}