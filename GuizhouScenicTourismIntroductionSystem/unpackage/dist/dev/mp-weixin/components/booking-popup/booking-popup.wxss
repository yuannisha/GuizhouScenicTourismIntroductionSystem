.booking-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}
.booking-popup .mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}
.booking-popup .content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
}
.booking-popup .content .header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.booking-popup .content .header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.booking-popup .content .header .close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}
.booking-popup .content .form .form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.booking-popup .content .form .form-item .label {
  font-size: 28rpx;
  color: #333;
}
.booking-popup .content .form .form-item .picker {
  font-size: 28rpx;
  color: #666;
}
.booking-popup .content .form .form-item .quantity-control {
  display: flex;
  align-items: center;
}
.booking-popup .content .form .form-item .quantity-control .minus, .booking-popup .content .form .form-item .quantity-control .plus {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 32rpx;
  color: #333;
}
.booking-popup .content .form .form-item .quantity-control .number {
  width: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}
.booking-popup .content .form .total {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
}
.booking-popup .content .form .total .label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.booking-popup .content .form .total .price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4d4f;
}
.booking-popup .content .footer {
  margin-top: 30rpx;
}
.booking-popup .content .footer .submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #007AFF;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}