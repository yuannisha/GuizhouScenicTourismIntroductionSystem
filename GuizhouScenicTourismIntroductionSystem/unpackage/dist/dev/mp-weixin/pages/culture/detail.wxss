.culture-detail-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 100rpx;
}
.culture-detail-container .swiper {
  height: 500rpx;
}
.culture-detail-container .swiper image {
  width: 100%;
  height: 100%;
}
.culture-detail-container .info-section {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.culture-detail-container .info-section .title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.culture-detail-container .info-section .title-row .name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.culture-detail-container .info-section .title-row .views {
  font-size: 24rpx;
  color: #999;
}
.culture-detail-container .info-section .tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}
.culture-detail-container .info-section .tags text {
  padding: 4rpx 16rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  font-size: 24rpx;
  color: #007AFF;
  background-color: rgba(0, 122, 255, 0.1);
  border-radius: 4rpx;
}
.culture-detail-container .info-section .description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}
.culture-detail-container .content-section {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.culture-detail-container .content-section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}
.culture-detail-container .section {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.culture-detail-container .section .section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.culture-detail-container .section .section-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.culture-detail-container .section .review-list .review-item {
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}
.culture-detail-container .section .review-list .review-item:last-child {
  border-bottom: none;
}
.culture-detail-container .section .review-list .review-item .user-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.culture-detail-container .section .review-list .review-item .user-info image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  margin-right: 16rpx;
}
.culture-detail-container .section .review-list .review-item .user-info .nickname {
  font-size: 28rpx;
  color: #333;
  margin-right: 16rpx;
}
.culture-detail-container .section .review-list .review-item .content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}
.culture-detail-container .section .review-list .review-item .images {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -8rpx;
}
.culture-detail-container .section .review-list .review-item .images image {
  width: calc(33.33% - 16rpx);
  height: 200rpx;
  margin: 8rpx;
  border-radius: 8rpx;
}
.culture-detail-container .section .review-list .review-item .time {
  font-size: 24rpx;
  color: #999;
}
.culture-detail-container .section .write-review-btn {
  margin-top: 30rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 40rpx;
  font-size: 28rpx;
}
.culture-detail-container .bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-top: 2rpx solid #f5f5f5;
}
.culture-detail-container .bottom-bar .left {
  display: flex;
}
.culture-detail-container .bottom-bar .left .action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 30rpx;
}
.culture-detail-container .bottom-bar .left .action-item .icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
}
.culture-detail-container .bottom-bar .left .action-item text {
  font-size: 24rpx;
  color: #666;
}