.scenic-list-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}
.scenic-list-container .search-bar {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
}
.scenic-list-container .search-bar input {
  flex: 1;
  height: 72rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  font-size: 28rpx;
}
.scenic-list-container .search-bar button {
  width: 120rpx;
  height: 72rpx;
  margin-left: 20rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #007AFF;
  border-radius: 36rpx;
}
.scenic-list-container .category-scroll {
  background-color: #fff;
  white-space: nowrap;
}
.scenic-list-container .category-scroll .category-list {
  display: flex;
  padding: 20rpx;
}
.scenic-list-container .category-scroll .category-list .category-item {
  padding: 10rpx 30rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 30rpx;
}
.scenic-list-container .category-scroll .category-list .category-item.active {
  color: #fff;
  background-color: #007AFF;
}
.scenic-list-container .category-scroll .category-list .category-item:last-child {
  margin-right: 0;
}
.scenic-list-container .scenic-list {
  padding: 20rpx;
  box-sizing: border-box;
}
.scenic-list-container .scenic-list .scenic-item {
  display: flex;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
}
.scenic-list-container .scenic-list .scenic-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.scenic-list-container .scenic-list .scenic-item .info {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.scenic-list-container .scenic-list .scenic-item .info .name-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.scenic-list-container .scenic-list .scenic-item .info .name-price .name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.scenic-list-container .scenic-list .scenic-item .info .name-price .price {
  font-size: 28rpx;
  color: #ff4d4f;
}
.scenic-list-container .scenic-list .scenic-item .info .location {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}
.scenic-list-container .scenic-list .scenic-item .info .description {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}
.scenic-list-container .scenic-list .scenic-item .info .tags {
  display: flex;
  flex-wrap: wrap;
}
.scenic-list-container .scenic-list .scenic-item .info .tags text {
  padding: 4rpx 12rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  font-size: 22rpx;
  color: #007AFF;
  background-color: rgba(0, 122, 255, 0.1);
  border-radius: 4rpx;
}
.scenic-list-container .scenic-list .loading-status {
  text-align: center;
  padding: 20rpx;
}
.scenic-list-container .scenic-list .loading-status text {
  font-size: 24rpx;
  color: #999;
}