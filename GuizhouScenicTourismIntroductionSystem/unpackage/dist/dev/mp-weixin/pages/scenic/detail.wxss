.scenic-detail-container {
  min-height: 100vh;
  padding-bottom: 100rpx;
  background-color: #f5f5f5;
}
.scenic-detail-container .banner {
  height: 400rpx;
}
.scenic-detail-container .banner image {
  width: 100%;
  height: 100%;
}
.scenic-detail-container .info-section {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.scenic-detail-container .info-section .name-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.scenic-detail-container .info-section .name-price .name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.scenic-detail-container .info-section .name-price .price {
  font-size: 32rpx;
  color: #ff4d4f;
}
.scenic-detail-container .info-section .location {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
}
.scenic-detail-container .info-section .location .icon {
  margin-right: 10rpx;
}
.scenic-detail-container .info-section .tags {
  display: flex;
  flex-wrap: wrap;
}
.scenic-detail-container .info-section .tags text {
  padding: 4rpx 12rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: #007AFF;
  background-color: rgba(0, 122, 255, 0.1);
  border-radius: 4rpx;
}
.scenic-detail-container .section {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.scenic-detail-container .section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}
.scenic-detail-container .section .section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.scenic-detail-container .section .section-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.scenic-detail-container .section .section-header .score {
  font-size: 32rpx;
  color: #ff4d4f;
}
.scenic-detail-container .section .time-info .time-item {
  display: flex;
  margin-bottom: 10rpx;
}
.scenic-detail-container .section .time-info .time-item .day {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
}
.scenic-detail-container .section .time-info .time-item .time {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
.scenic-detail-container .section .traffic-info .traffic-item {
  margin-bottom: 20rpx;
}
.scenic-detail-container .section .traffic-info .traffic-item .type {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.scenic-detail-container .section .traffic-info .traffic-item .desc {
  font-size: 26rpx;
  color: #666;
}
.scenic-detail-container .section .ticket-info .ticket-item {
  margin-bottom: 20rpx;
}
.scenic-detail-container .section .ticket-info .ticket-item .ticket-name-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.scenic-detail-container .section .ticket-info .ticket-item .ticket-name-price .name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
.scenic-detail-container .section .ticket-info .ticket-item .ticket-name-price .price {
  font-size: 28rpx;
  color: #ff4d4f;
}
.scenic-detail-container .section .ticket-info .ticket-item .desc {
  font-size: 26rpx;
  color: #666;
}
.scenic-detail-container .section .review-list .review-item {
  margin-bottom: 30rpx;
}
.scenic-detail-container .section .review-list .review-item .user-info {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.scenic-detail-container .section .review-list .review-item .user-info image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 10rpx;
}
.scenic-detail-container .section .review-list .review-item .user-info .nickname {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
.scenic-detail-container .section .review-list .review-item .user-info .score {
  font-size: 28rpx;
  color: #ff4d4f;
}
.scenic-detail-container .section .review-list .review-item .content {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.scenic-detail-container .section .review-list .review-item .images {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -5rpx;
  margin-bottom: 10rpx;
}
.scenic-detail-container .section .review-list .review-item .images image {
  width: calc(33.33% - 10rpx);
  height: 200rpx;
  margin: 5rpx;
  border-radius: 8rpx;
}
.scenic-detail-container .section .review-list .review-item .time {
  font-size: 24rpx;
  color: #999;
}
.scenic-detail-container .bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.scenic-detail-container .bottom-bar .left {
  display: flex;
}
.scenic-detail-container .bottom-bar .left .action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
}
.scenic-detail-container .bottom-bar .left .action-item .icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
}
.scenic-detail-container .bottom-bar .left .action-item text {
  font-size: 24rpx;
  color: #666;
}
.scenic-detail-container .bottom-bar .right button {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}
.scenic-detail-container .write-review-btn {
  margin-top: 30rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 40rpx;
  font-size: 28rpx;
}