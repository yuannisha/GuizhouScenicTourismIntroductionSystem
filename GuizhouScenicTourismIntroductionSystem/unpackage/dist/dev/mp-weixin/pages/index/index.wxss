.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}
.container .search-section {
  padding: 20rpx;
  background-color: #fff;
}
.container .search-section .search-bar {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
}
.container .search-section .search-bar input {
  flex: 1;
  height: 72rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
}
.container .search-section .search-bar button {
  width: 120rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #007AFF;
  border-radius: 36rpx;
}
.container .banner {
  height: 300rpx;
}
.container .banner image {
  width: 100%;
  height: 100%;
}
.container .nav-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.container .nav-grid .nav-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}
.container .nav-grid .nav-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}
.container .nav-grid .nav-item text {
  font-size: 24rpx;
  color: #333;
}
.container .section {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff;
}
.container .section .section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.container .section .section-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.container .section .section-header .more {
  font-size: 28rpx;
  color: #666;
}
.container .section .scenic-scroll {
  white-space: nowrap;
}
.container .section .scenic-scroll .scenic-list {
  display: flex;
  padding-bottom: 10rpx;
}
.container .section .scenic-scroll .scenic-list .scenic-item {
  width: 300rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}
.container .section .scenic-scroll .scenic-list .scenic-item image {
  width: 100%;
  height: 200rpx;
}
.container .section .scenic-scroll .scenic-list .scenic-item .info {
  padding: 10rpx;
}
.container .section .scenic-scroll .scenic-list .scenic-item .info .name {
  font-size: 28rpx;
  color: #333;
}
.container .section .scenic-scroll .scenic-list .scenic-item .info .price {
  font-size: 24rpx;
  color: #ff4d4f;
}
.container .section .culture-list .culture-item {
  display: flex;
  margin-bottom: 20rpx;
}
.container .section .culture-list .culture-item:last-child {
  margin-bottom: 0;
}
.container .section .culture-list .culture-item image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.container .section .culture-list .culture-item .info {
  flex: 1;
}
.container .section .culture-list .culture-item .info .name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.container .section .culture-list .culture-item .info .description {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}
.container .section .culture-list .culture-item .info .tags {
  display: flex;
  flex-wrap: wrap;
}
.container .section .culture-list .culture-item .info .tags text {
  padding: 4rpx 12rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  font-size: 22rpx;
  color: #007AFF;
  background-color: rgba(0, 122, 255, 0.1);
  border-radius: 4rpx;
}