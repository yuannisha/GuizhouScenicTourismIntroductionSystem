.reviews-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}
.reviews-container .category-scroll {
  background-color: #fff;
  white-space: nowrap;
}
.reviews-container .category-scroll .category-list {
  display: flex;
  padding: 20rpx;
}
.reviews-container .category-scroll .category-list .category-item {
  padding: 10rpx 30rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 30rpx;
}
.reviews-container .category-scroll .category-list .category-item.active {
  color: #fff;
  background-color: #007AFF;
}
.reviews-container .category-scroll .category-list .category-item:last-child {
  margin-right: 0;
}
.reviews-container .review-list {
  height: calc(100vh - 100rpx);
  padding: 20rpx;
  box-sizing: border-box;
}
.reviews-container .review-list .review-items .review-item {
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
}
.reviews-container .review-list .review-items .review-item .target-info {
  display: flex;
  margin-bottom: 20rpx;
}
.reviews-container .review-list .review-items .review-item .target-info image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.reviews-container .review-list .review-items .review-item .target-info .info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.reviews-container .review-list .review-items .review-item .target-info .info .name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.reviews-container .review-list .review-items .review-item .target-info .info .score {
  font-size: 26rpx;
  color: #ff4d4f;
}
.reviews-container .review-list .review-items .review-item .review-content .content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}
.reviews-container .review-list .review-items .review-item .review-content .images {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -8rpx;
  margin-bottom: 16rpx;
}
.reviews-container .review-list .review-items .review-item .review-content .images image {
  width: calc(33.33% - 16rpx);
  height: 200rpx;
  margin: 8rpx;
  border-radius: 8rpx;
}
.reviews-container .review-list .review-items .review-item .review-content .time {
  font-size: 24rpx;
  color: #999;
}
.reviews-container .review-list .loading-status {
  text-align: center;
  padding: 20rpx;
}
.reviews-container .review-list .loading-status text {
  font-size: 24rpx;
  color: #999;
}