.profile-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}
.profile-container .user-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.profile-container .user-info .avatar-nickname {
  display: flex;
  align-items: center;
}
.profile-container .user-info .avatar-nickname image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
}
.profile-container .user-info .avatar-nickname .nickname {
  font-size: 32rpx;
  color: #333;
}
.profile-container .user-info .edit-btn {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 30rpx;
}
.profile-container .not-login {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.profile-container .not-login image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 30rpx;
}
.profile-container .not-login .btn-group {
  display: flex;
}
.profile-container .not-login .btn-group button {
  margin: 0 20rpx;
  width: 200rpx;
}
.profile-container .menu-list {
  background-color: #fff;
  margin-bottom: 20rpx;
}
.profile-container .menu-list .menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 2rpx solid #f5f5f5;
}
.profile-container .menu-list .menu-item:last-child {
  border-bottom: none;
}
.profile-container .menu-list .menu-item .left {
  display: flex;
  align-items: center;
}
.profile-container .menu-list .menu-item .left .icon {
  margin-right: 20rpx;
  font-size: 40rpx;
}
.profile-container .menu-list .menu-item .left .name {
  font-size: 28rpx;
  color: #333;
}
.profile-container .menu-list .menu-item .arrow {
  font-size: 28rpx;
  color: #999;
}
.profile-container .logout-btn {
  padding: 40rpx;
}
.profile-container .logout-btn button {
  width: 100%;
}