.edit-profile-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}
.edit-profile-container .form-group {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}
.edit-profile-container .form-group .form-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}
.edit-profile-container .form-group .form-item:last-child {
  border-bottom: none;
}
.edit-profile-container .form-group .form-item .label {
  width: 120rpx;
  font-size: 28rpx;
  color: #333;
}
.edit-profile-container .form-group .form-item input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
}
.edit-profile-container .form-group .form-item .phone {
  flex: 1;
  font-size: 28rpx;
  color: #666;
}
.edit-profile-container .form-group .form-item.avatar-item {
  padding: 40rpx 30rpx;
}
.edit-profile-container .form-group .form-item.avatar-item .avatar-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.edit-profile-container .form-group .form-item.avatar-item .avatar-wrapper image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 20rpx;
}
.edit-profile-container .form-group .form-item.avatar-item .avatar-wrapper .tip {
  font-size: 24rpx;
  color: #999;
}
.edit-profile-container .btn-group {
  margin-top: 60rpx;
  padding: 0 40rpx;
}
.edit-profile-container .btn-group button {
  width: 100%;
}