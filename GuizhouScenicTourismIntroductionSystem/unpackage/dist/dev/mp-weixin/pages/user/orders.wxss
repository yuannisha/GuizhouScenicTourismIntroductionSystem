.orders-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}
.orders-container .orders-list {
  height: 100vh;
}
.orders-container .orders-list .order-item {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
}
.orders-container .orders-list .order-item .scenic-info {
  display: flex;
  margin-bottom: 20rpx;
}
.orders-container .orders-list .order-item .scenic-info image {
  width: 160rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.orders-container .orders-list .order-item .scenic-info .info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.orders-container .orders-list .order-item .scenic-info .info .name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
.orders-container .orders-list .order-item .scenic-info .info .location {
  font-size: 24rpx;
  color: #666;
}
.orders-container .orders-list .order-item .order-info .booking-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.orders-container .orders-list .order-item .order-info .booking-info .date {
  font-size: 24rpx;
  color: #666;
}
.orders-container .orders-list .order-item .order-info .booking-info .ticket {
  font-size: 24rpx;
  color: #666;
}
.orders-container .orders-list .order-item .order-info .booking-info .price {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: bold;
}
.orders-container .orders-list .order-item .order-info .status-action {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.orders-container .orders-list .order-item .order-info .status-action .status {
  font-size: 24rpx;
}
.orders-container .orders-list .order-item .order-info .status-action .status.pending {
  color: #faad14;
}
.orders-container .orders-list .order-item .order-info .status-action .status.confirmed {
  color: #52c41a;
}
.orders-container .orders-list .order-item .order-info .status-action .status.cancelled {
  color: #999;
}
.orders-container .orders-list .order-item .order-info .status-action .cancel-btn {
  margin: 0;
  padding: 0 20rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 24rpx;
}
.orders-container .orders-list .loading-status {
  text-align: center;
  padding: 20rpx;
}
.orders-container .orders-list .loading-status text {
  font-size: 24rpx;
  color: #999;
}